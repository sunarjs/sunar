{
    "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": false,
        "defaultBranch": "main"
    },
    "files": {
        "includes": [
            "**",
            "!**/node_modules",
            "!**/.next",
            "!**/dist",
            "!**/.source",
            "!**/.turbo"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "indentWidth": 4,
            "lineWidth": 140,
            "indentStyle": "space",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    }
}
