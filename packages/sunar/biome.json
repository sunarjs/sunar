{
    "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
    "extends": "//",
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            [":BUN:", ":NODE:"],
                            ":BLANK_LINE:",
                            ":PACKAGE:",
                            ":BLANK_LINE:",
                            { "type": true, "source": ":PACKAGE:" },
                            ":BLANK_LINE:",
                            [{ "type": false, "source": "~/**" }, "!$/types"],
                            ":BLANK_LINE:",
                            [{ "type": true, "source": "~/**" }, "~/types"]
                        ]
                    }
                }
            }
        }
    }
}
