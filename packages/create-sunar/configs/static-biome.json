{
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentWidth": 4,
			"lineWidth": 100,
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"files": {
		"include": ["**/*"],
		"ignore": ["node_modules", "dist"]
	}
}
